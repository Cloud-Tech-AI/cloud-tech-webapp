# Environment Variables Example
# Copy this file to .env.local and update with your values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_SITE_NAME="Cloud Tech"

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Newsletter Integration (Mailchimp, ConvertKit, etc.)
NEXT_PUBLIC_NEWSLETTER_API_URL=https://your-newsletter-service.com/api
NEWSLETTER_API_KEY=your-api-key

# Contact Form (EmailJS, Formspree, etc.)
NEXT_PUBLIC_CONTACT_FORM_ID=your-form-id
CONTACT_FORM_API_KEY=your-api-key

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=@cloudtech
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/cloudtech
NEXT_PUBLIC_GITHUB_URL=https://github.com/cloud-tech-ai

# Podcast RSS Feed
NEXT_PUBLIC_PODCAST_RSS_URL=https://your-podcast-host.com/rss

# Content Management (if using a headless CMS)
CMS_API_URL=https://your-cms.com/api
CMS_API_KEY=your-cms-api-key
